<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0.1dp"
    android:background="@color/white">

    <LinearLayout
      android:id="@+id/characterLayer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      android:background="?android:selectableItemBackground"
      android:gravity="center"
      android:orientation="vertical"
      android:paddingStart="@dimen/spacing_2x"
      android:paddingLeft="@dimen/spacing_2x"
      android:paddingTop="@dimen/spacing_4x"
      android:paddingEnd="@dimen/spacing_2x"
      android:paddingRight="@dimen/spacing_2x"
      android:paddingBottom="@dimen/spacing_3x">

      <TextView
        android:id="@+id/characterView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:textSize="@dimen/text_size_character_default" />

      <TextView
        android:id="@+id/meaningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_1x"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="@dimen/text_size_writing_meaning"
        android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
      android:id="@+id/checkLayer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:paddingStart="@dimen/spacing_1x"
      android:paddingLeft="@dimen/spacing_1x"
      android:paddingTop="@dimen/spacing_quarter"
      android:paddingEnd="@dimen/spacing_quarter"
      android:paddingRight="@dimen/spacing_quarter"
      android:paddingBottom="@dimen/spacing_1x">

      <ImageView
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_black_18dp"
        android:tint="@color/bluegrey_light" />
    </RelativeLayout>

  </RelativeLayout>

</merge>